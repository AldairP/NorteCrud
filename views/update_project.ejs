<!-- include header-->
<%- include('include/_header')%>
<!-- /include header-->

<!-- Main site-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex-justify-between">
      <div class="filter">
        <a href="/"> <i class="fas fa-angle-double-left"></i>Todos los proyectos </a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Actualizar proyecto</h2>
      <span class="text-light">
        Usa el siguiente formulario para actualizar el proyecto</span
      >
    </div>

    <!-- add user form-->
    <!-- form handling-->
    <form method="POST" id="update_project">
      <div class="new_project">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= project._id %>" />
          <input type="text" name="name" value="<%= project.name %>" placeholder="Mark Stoiner" />
        </div>
        <div class="form-group">
          <label for="academica" class="text-light">Área Académica</label>
          <input
            type="text"
            name="academica"
            value="<%= project.academica %>"
            placeholder="example@gmail.com"
          />
        </div>
        <div class="form-group">
          <label for="grupoinv" class="text-light"
            >Grupos de Investigacion responsable</label>
          <input type="text" name="grupoinv" value="<%= project.grupoinv %>" placeholder="" />
        </div>
        <div class="form-group">
          <label for="finaciadora" class="text-light"
            >Entidad financiadora</label
          >
          <input type="text" name="finaciadora" value="<%= project.finaciadora %>" placeholder="" />
        </div>
        <div class="form-group">
          <label for="otras" class="text-light">Otras Entidades</label>
          <input type="text" name="otras" value="<%= project.otras %>" placeholder="" />
        </div>
        <div class="form-group">
          <label for="ingresoun" class="text-light">Ingreso UNINORTE %</label>
          <input type="number" name="ingresoun" value="<%= project.ingresoun %>" placeholder="" />
        </div>
        <div class="form-group">
          <label for="coinvestigador" class="text-light"
            >Investigan Coinvestigadores</label
          >
          <input type="text" name="coinvestigador" value="<%= project.coinvestigador %>" placeholder="" />
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /Main site-->

<!-- include footer-->
<%- include('include/_footer')%>
<!-- /include footer-->
